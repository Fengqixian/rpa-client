{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../*"]
    },
    /* 忽略弃用警告 */
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
